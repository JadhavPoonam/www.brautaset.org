---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.feed.name }}</title>
  <link href="{{ site.feed.url }}/"/>
  <link type="application/atom+xml" rel="self" href="{{ site.feed.url }}/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.feed.url }}/</id>
  <author>
    <name>Stig Brautaset</name>
    <email>stig@brautaset.org</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>{{ site.feed.url }}{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="{{ site.feed.url }}{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}

</feed>
